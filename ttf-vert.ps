% int [ isdigit ] bool
/isdigit {
	dup 16#30 ge
	exch 16#39 le and
} bind def

/expand-composite {
	1 dict begin
	/expand false def
	[ exch bind
		{
			dup dup dup 
			type /arraytype eq 
			exch type /packedarraytype eq or
			exch xcheck and {
				expand-composite
			} { dup { mark } aload pop eq {
				exec /expand true def
			} { expand {
				dup dup { >> } aload pop eq
				exch { ] } aload pop eq or {
					/expand false def
				} if
				exec
			} if } ifelse } ifelse
		} forall
	] cvx
	end
} bind def

% <key> <dict> <default> default-switch -
/default-switch {
	3 1 roll exch knownget {
		exch pop
	} if
	exec
} bind def

