% array pos <getsfnts> int
/getsfnts {
	4 dict begin
	/pos exch def
	/sfnts exch def
	/got false def
	sfnts {
		/s exch def
		pos s length lt {
			s pos get
			/got true def
			exit
		} if
		/pos pos s length sub def
	} forall
	got
	end
} bind def

% sfnts str <opensfnts> dict
/opensfnts {
	1 dict begin
	pop	% ignore mode
	/sfnts exch def
	/pos 0 def
	currentdict end
} bind def

% dict str <readsfnts> str' bool
/readsfnts {
	1 dict begin
	/s exch def
	/i 0 def
	/mature true def
	begin
		s length {
			sfnts pos getsfnts {
				s i 2 index put pop
			} {
				/mature false store exit
			} ifelse
			/pos pos 1 add def
			/i i 1 add store
		} repeat
		mature {
			s true
		} {
			s 0 i getinterval false
		} ifelse
	end end
} bind def

% dict <sfntsposition> num
/sfntsposition {
	begin
	pos
	end
} bind def

% dict num <setsfntsposition> -
/setsfntsposition {
	exch begin
	/pos exch def
	end
} bind def

/forwardsfnts {
	exch begin
	pos add /pos exch def
	end
} bind def

% str <str2num> num
/str2num {
	0 exch { exch 8 bitshift add } forall
} bind def

% num <dwrite> -
